---
interface Props {
	href: string;
}

const { href } = Astro.props;
---

<a
	href={href}
	class="dark:focus:ring-[#1da1f2]/55 mb-2 mr-2 inline-flex scale-90 cursor-pointer flex-row
    items-center justify-center gap-x-2 rounded-lg px-5 py-2.5 text-center font-medium text-white
    opacity-70 transition-all duration-200 ease-out hover:scale-110 hover:bg-slate-700 hover:opacity-100 hover:shadow-lg focus:outline-none focus:ring-4 focus:ring-[#1da1f2]/50"
>
	<slot name="before" />
	<slot> Un texto por defecto</slot>
	<slot name="after" />
</a>
